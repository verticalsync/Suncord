{
    "manifest_version": 3,
    "minimum_chrome_version": "111",

    "name": "Suncord Web",
    "description": "Fork of vencord",
    "author": "verticalsync",
    "homepage_url": "https://github.com/verticalsync/Suncord",
    "icons": {
        "128": "icon.png"
    },

    "host_permissions": [
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*"
    ],

    "permissions": ["declarativeNetRequest"],

    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["dist/Vencord.js"],
            "all_frames": true,
            "world": "MAIN"
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["dist/*", "third-party/*"],
            "matches": ["*://*.discord.com/*"]
        }
    ],

    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "modifyResponseHeaders",
                "enabled": true,
                "path": "modifyResponseHeaders.json"
            }
        ]
    }
}
